    //button
    <style name="SolidGoldButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconPadding">@dimen/_8sdp</item>
        <item name="iconGravity">textStart</item>
        <item name="backgroundTint">@color/gold</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
    </style>

    <style name="StrokeGoldButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconPadding">@dimen/_8sdp</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeColor">@color/gold</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
