<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="styleInputLayout">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="expandedHintEnabled">false</item>
    </style>

    <style name="roundedImage" parent="">
        <item name="android:padding">2dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="roundedImage2" parent="">
        <item name="android:padding">2dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="topRoundedImage" parent="">
        <item name="android:padding">2dp</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="circleImage" parent="">
        <item name="paddingStart">2dp</item>
        <item name="paddingEnd">2dp</item>
        <item name="android:padding">2dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="materialButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="paddingEnd">20dp</item>
        <item name="paddingStart">20dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="elevation">0dp</item>
        <item name="rippleColor">@color/color_second</item>
    </style>
    <style name="skipButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="cornerRadius">15dp</item>
        <item name="elevation">0dp</item>
        <item name="rippleColor">@color/white</item>
        <item name="textFillColor">@color/color_second</item>
        <item name="backgroundTint">@color/white</item>

    </style>

    <style name="Widget.Theme.ChefsHub.ButtonBar.Fullscreen" parent="">
<!--        <item name="android:background">@color/black_overlay</item>-->
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Toolbar">
        <item name="elevation">12dp</item>
        <item name="contentInsetStart">12dp</item>
        <item name="contentInsetEnd">12dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
<!--        <item name="android:background">@drawable/ic_toolbar</item>-->
    </style>

    <style name="cardViewStyle" parent="">
        <item name="elevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
</resources>